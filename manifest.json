{
    "manifest_version": 3,
    "name": "Inflation Calculator",
    "description": "Simple calculator that adjusts USD amounts for inflation.",
    "version": "1.0",
    "action": {
        "default_popup": "calculator.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://api.bls.gov/publicAPI/v1/*"
    ],
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            }
        }
    }
}