{
    "manifest_version": 3,
    "name": "Inflation Calculator",
    "description": "Simple calculator that adjusts prices for inflation.",
    "version": "1.0",
    "action": {
        "default_popup": "calculator.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            }
        }
    }
}